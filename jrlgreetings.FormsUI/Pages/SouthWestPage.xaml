<?xml version="1.0" encoding="utf-8" ?>
<mvvmx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:forms="using:Xamarin.Forms"
                    xmlns:mvvmx="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"        
                    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"  
                    xmlns:fx="clr-namespace:jrlgreetings.FormsUI.Effects"
                    Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToPageStyle}}"
                    mvx:Bi.nd="Title Title"
                    x:Class="jrlgreetings.FormsUI.Pages.SouthWestPage">
    <ScrollView VerticalOptions="Fill">
        <StackLayout VerticalOptions="Fill">
            <Label mvx:Bi.nd="Text RoomContentText" TextColor="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToForegroundColor}}" BackgroundColor="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToBackgroundColor}}"  fx:TypefaceEffect.TypefaceName="MonospaceTypewriter" VerticalOptions="FillAndExpand"/>
            <Image x:Name="certImage" mvx:Bi.nd="IsVisible Completed" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="certImage_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ScrollView>
</mvvmx:MvxContentPage>
