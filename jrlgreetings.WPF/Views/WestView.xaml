<views:MvxWpfView
	         xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
             x:Class="jrlgreetings.WPF.Views.WestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jrlgreetings.WPF.Views"
             Style="{StaticResource RoomViewStyle}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:BaseRoomControl>
        <ScrollViewer >
            <Grid Margin="20">
                <Grid Visibility="{Binding AnnoyanceFactor, Converter={StaticResource NonZeroToVisibility}}">
                    <TextBlock Text="{Binding RoomContentText, Converter={StaticResource StringToBrokenString}, ConverterParameter='0'}" Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToContentTextBlockStyle}}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationX}, ConverterParameter='0'}" Y="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationY}, ConverterParameter='0'}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="{Binding RoomContentText, Converter={StaticResource StringToBrokenString}, ConverterParameter='1'}" Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToContentTextBlockStyle}}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationX}, ConverterParameter='1'}" Y="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationY}, ConverterParameter='1'}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="{Binding RoomContentText, Converter={StaticResource StringToBrokenString}, ConverterParameter='2'}" Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToContentTextBlockStyle}}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationX}, ConverterParameter='2'}" Y="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationY}, ConverterParameter='2'}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="{Binding RoomContentText, Converter={StaticResource StringToBrokenString}, ConverterParameter='3'}" Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToContentTextBlockStyle}}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationX}, ConverterParameter='3'}" Y="{Binding AnnoyanceFactor, Converter={StaticResource AnnoyanceToTranslationY}, ConverterParameter='3'}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>
                <TextBlock Text="{Binding RoomContentText}" Visibility="{Binding AnnoyanceFactor, Converter={StaticResource ZeroToVisibility}}" Style="{Binding IsTempleCompleted, Converter={StaticResource TempleCompletionToContentTextBlockStyle}}"/>
            </Grid>
        </ScrollViewer>
    </local:BaseRoomControl>
</views:MvxWpfView>
