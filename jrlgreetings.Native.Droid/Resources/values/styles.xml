<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DirectionButton">
      <item name="android:fontFamily">@font/immortal</item>
    </style>
  <style name="TitleTextView">
    <item name="android:fontFamily">@font/immortal</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textAlignment">center</item>
  </style>
    <style name="DescriptionTextView">
      <item name="android:fontFamily">@font/immortal</item>
      <item name="android:layout_margin">3dp</item>
    </style>
    <style name="RoomContentTextView">
      <item name="android:fontFamily">@font/monospacetypewriter</item>
      <item name="android:layout_margin">4dp</item>
    </style>
</resources>
