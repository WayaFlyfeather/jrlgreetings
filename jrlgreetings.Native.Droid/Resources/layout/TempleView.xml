
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        local:MvxBind="Text CurrentRoom.Title"
        style="@style/TitleTextView" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="3">
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="N"                
                local:MvxBind="Click GoNorth_Command"
                style="@style/DirectionButton" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="8"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:text="W"
                local:MvxBind="Click GoWest_Command"
                style="@style/DirectionButton" />
            <ScrollView
                android:layout_columnWeight="8"
                android:layout_rowWeight="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="1"
                android:scrollbars="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    local:MvxBind="Text CurrentRoom.RoomDescription"
                    style="@style/DescriptionTextView" />
            </ScrollView>
            
            <FrameLayout
                android:id="@+id/roomcontent_frame"
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="5"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="2" />
            <SeekBar
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="3"
                android:max="100"
                android:min="0"
                local:MvxBind="Progress CurrentRoom.AnnoyanceFactor" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="8"
                android:layout_height="0dp"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:text="E"
                local:MvxBind="Click GoEast_Command"
                style="@style/DirectionButton" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="4"
                android:text="S"
                local:MvxBind="Click GoSouth_Command"
                style="@style/DirectionButton" />
        </GridLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:background="#247FFFD4"
            local:MvxBind="Visibility Visibility(CurrentRoom.Completed)"/>
     </FrameLayout>
</LinearLayout>