<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="3">
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Room 1"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=0; Background RoomCompletionList[0], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Room 2"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=1; Background RoomCompletionList[1], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="0"
        android:text="Room 3"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=2; Background RoomCompletionList[2], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Room 4"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=3; Background RoomCompletionList[3], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Room 5"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=4; Background RoomCompletionList[4], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="1"
        android:text="Room 6"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=5; Background RoomCompletionList[5], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Room 7"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=6; Background RoomCompletionList[6], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Room 8"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=7; Background RoomCompletionList[7], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <Button
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="0dp"
        android:layout_column="2"
        android:layout_row="2"
        android:text="Room 9"                
        local:MvxBind="Click GoToRoom_Command, CommandParameter=8; Background RoomCompletionList[8], Converter=CompletionToTeleportBackground"
        style="@style/DirectionButton" />
    <FrameLayout
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="6">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                local:MvxBind="Text RoomContentText"
                style="@style/RoomContentTextView" />
        </ScrollView>
    </FrameLayout>
</GridLayout>
