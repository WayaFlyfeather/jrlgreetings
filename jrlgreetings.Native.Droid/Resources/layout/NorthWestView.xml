<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        local:MvxBind="Text Title" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="3">
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="N"
                local:MvxBind="Click GoNorth_Command"
                android:background="#40ec4747" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="8"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:text="W"
                local:MvxBind="Click GoWest_Command"
                android:background="#40ec4747" />
            <TextView
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="2"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="1"
                local:MvxBind="Text RoomDescription" />
            <TextView
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="5"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="2"
                local:MvxBind="Text RoomContentText" />
            <SeekBar
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="3"
                android:max="100"
                android:min="0"
                local:MvxBind="Progress AnnoyanceFactor" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="8"
                android:layout_height="0dp"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:text="E"
                local:MvxBind="Click GoEast_Command"
                android:background="#40ec4747" />
            <Button
                android:layout_width="0dp"
                android:layout_columnWeight="8"
                android:layout_rowWeight="1"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_row="4"
                android:text="S"
                local:MvxBind="Click GoSouth_Command"
                android:background="#40ec4747" />
        </GridLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:background="#247FFFD4"
            local:MvxBind="Visibility Visibility(Completed)"/>
     </FrameLayout>
</LinearLayout>
