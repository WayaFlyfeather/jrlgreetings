<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            local:MvxBind="Text RoomContentText"
            style="@style/RoomContentTextView" />
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/semi_transparent_red_orange_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='7'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orange_yellow_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='6'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yellow_green_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='5'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_turquoise_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='4'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/turquoise_blue_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='3'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_purple_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='2'"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_violet_gradient"
        local:MvxBind="Visibility AnnoyanceFactor, Converter=AnnoyanceToVeilVisibility, ConverterParameter='1'"/>
</FrameLayout>
